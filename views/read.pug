doctype html
html(lang="ko")
    head
        title #{title}
    body
        h1 #{title}
        div
            form(action='/board/update' method='post')
                table(border='1')
                    input(type='hidden' name='idx' value=rows.idx)
                    tbody
                        tr
                            td 작성자
                            td #{rows.userid}
                        tr
                            td 제목
                            td
                                input#title(type='text' name='title' value=rows.title required='')
                        tr
                            td 내용
                            td
                                textarea#content(name='content' cols='30' rows='10' required='') #{rows.content}
                        tr
                            td 패스워드
                            td
                                input#passwd(type='password' name='passwd')
                        tr
                            td 변경일
                            td #{rows.modidate}
                        tr
                            td 등록일
                            td #{rows.regdate}
                        tr
                            td 조회수
                            td #{rows.hit}
                div
                    a(href='/board/page') 목록
                if(loginstate=='okay')
                    button(type='submit')  글 수정
            if(loginstate=='okay')
                form(action='/board/delete' method = 'post')
                    input(type='hidden' name='idx' value=rows.idx)
                    button(type='submit')  글 삭제
