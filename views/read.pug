doctype html
head(lang="ko")
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title #{title}
  link(rel='stylesheet', href='/css/header.css', type='text/css')
  link(rel='stylesheet', href='/css/table.css', type='text/css')
  link(rel='stylesheet', href='/css/boardtable.css', type='text/css')
  link(rel='stylesheet', href='/css/infoBox.css', type='text/css')
body
    header 
        include ./header.pug

        include ./infoBox.pug

    main(style="text-align : center")
        h1 #{title}
        div
            form(action='/board/update' method='post')
                table(border='1')
                    input(type='hidden' name='idx' value=rows.idx)
                    tbody
                        tr
                            td.boardtop 작성자
                            td #{rows.userid}
                        tr
                            td.boardtop 제목
                            td
                                input#title(type='text' name='title' value=rows.title required=''  style="width:99%;" readonly)
                        tr
                            td.boardtop 내용
                            td
                                textarea#content(name='content' cols='30' rows='10' required='' style="width:99%; resize:none;" readonly) #{rows.content}
                        tr
                            td.boardtop 변경일
                            td #{rows.modidate}
                        tr
                            td.boardtop 등록일
                            td #{rows.regdate}
                        tr
                            td.boardtop 조회수
                            td #{rows.hit}
                        tr 
                            td.boardtop 와드수
                            if(rows.likeuser == '0')
                                td 0
                            if(rows.likeuser != '0')
                                td #{rows.likeuser.split('/').length-1}

                div
                    a(href='/board/page') 목록
            if(id==rows.userid)
                form(action='/board/rewrite', method='get')
                    button(type='submit') 글 수정
            if(loginstate=='okay')
                form(action='/board/like', method='post')
                    if(!chklike)
                        div
                            input.likeBtn(type="image" src="/img/bush.png")
                    if(chklike) 
                        div
                            input.likeBtn(type="image" src="/img/wardbush.png")
            br
            br
            div
                if(loginstate=='okay')
                    form(action="/board/comment" method = "post")
                        input(type='hidden' name='idx' value=rows.idx)
                        input.commentInput(name ="comment" type="text" required='')
                        button(type="submit") 댓글 달기
                if(!loginstate)
                    input(value ="로그인 후 댓글을 달 수 있습니다" style="text-align:center; width:40%;" readonly )

            div#commentlist
                if(comrows.length>0)
                    table(border=1)
                        tbody
                            tr.boardtop
                                td 작성자
                                td 내용
                                -for(var i = 0; i<comrows.length; i++)
                                    -var data = comrows[i]
                                    tr
                                        td(style="width:10%;") #{data.userid}
                                        td 
                                            div
                                                textarea.commentCon  #{data.comments}
                                            -if(id==data.userid)
                                                div.commentBtn
                                                    form(action="/board/comment/delete" method = "post")
                                                        input(type='hidden' name='idx' value=rows.idx)
                                                        input(type='hidden' name='comidx' value=data.idx)
                                                        button(type="submit") 댓글 삭제